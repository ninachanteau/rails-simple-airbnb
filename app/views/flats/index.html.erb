<div class="navbar-wagon">
  <%= link_to 'Simple Airbnb', flats_path, class: "navbar-logo" %>
  <div class="navbar-right">
  <%= link_to "Add flat", new_flat_path, class: "btn btn-primary" %></div>
  </div>
</div>

<div class="container">
  <h1>All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-img" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= flat.picture %>);">
          </div>
          <div class="card-body">
            <h4><strong><%= flat.name %></strong></h4>
            <p><%= flat.address %></p>
            <p><i class="fas fa-users"></i> <%= flat.number_of_guests %>  <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
          </div>
          <div class="card-footer">
            <%= link_to 'More info', flat_path(flat) %>
            <%= link_to 'Edit', edit_flat_path(flat), class: "text-warning" %>
            <%= link_to 'Remove', flat_path(flat), method: :delete, class: "text-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
